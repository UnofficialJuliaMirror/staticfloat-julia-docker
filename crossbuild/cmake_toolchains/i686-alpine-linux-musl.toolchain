# Toolchain file for i686-alpine-linux-musl
set(CMAKE_SYSTEM_NAME Linux)

set(CMAKE_SYSROOT /opt/i686-alpine-linux-musl/i686-alpine-linux-musl/sys-root/)
set(CMAKE_INSTALL_PREFIX /)

set(CMAKE_C_COMPILER /opt/i686-alpine-linux-musl/bin/i686-alpine-linux-musl-gcc)
set(CMAKE_CXX_COMPILER /opt/i686-alpine-linux-musl/bin/i686-alpine-linux-musl-g++)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)
